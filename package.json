{
    "name": "wasm-boids",
    "version": "1.0.0",
    "description": "Boids simulation using WebAssembly and Vue.js",
    "main": "index.js",
    "scripts": {
        "build-wasm:dev": "emcmake cmake -B build-dev -DCMAKE_BUILD_TYPE=Debug -DWASM_RUNTIME_OUTPUT_DIR=src/wasm/build/dev && cmake --build build-dev",
        "build-wasm:prod": "emcmake cmake -B build-prod -DCMAKE_BUILD_TYPE=Release -DWASM_RUNTIME_OUTPUT_DIR=src/wasm/build/prod && cmake --build build-prod",
    "serve": "cross-env WASM_BUILD_DIR=dev VUE_APP_WASM_BUILD_DIR=dev concurrently \"nodemon --watch src/wasm --ext cpp,h --exec \\\"npm run build-wasm:dev\\\"\" \"wait-on src/wasm/build/dev/wasm_boids.js && vue-cli-service serve\"",
        "vue:build": "vue-cli-service build",
    "build": "cross-env WASM_BUILD_DIR=prod VUE_APP_WASM_BUILD_DIR=prod npm-run-all build-wasm:prod vue:build",
        "deploy": "npm run build && wait-on dist/index.html && gh-pages -d dist",
        "watch-wasm": "nodemon --watch src/wasm --ext cpp,h --exec \"emcc -fsyntax-only src/wasm/main.cpp\""
    },
    "dependencies": {
        "three": "^0.176.0",
        "vue": "^3.3.0",
        "stats-gl": "^3.6.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-router": "^5.0.9",
        "@vue/cli-plugin-vuex": "^5.0.9",
        "@vue/cli-service": "^5.0.9",
        "copy-webpack-plugin": "^13.0.0",
        "cross-env": "^7.0.3",
        "crypto-browserify": "^3.12.1",
        "gh-pages": "^6.3.0",
        "nodemon": "^3.1.10",
        "npm-run-all": "^4.1.5",
        "path-browserify": "^1.0.1",
        "stream-browserify": "^3.0.0",
        "vm-browserify": "^1.1.2",
        "wait-on": "^8.0.3"
    }
}